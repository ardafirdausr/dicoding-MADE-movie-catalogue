<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/navigation_movies">

    <fragment
        android:id="@+id/navigation_movies"
        android:name="com.ardafirdausr.movie_catalogue.view.fragment.MoviesFragment"
        android:label="@string/title_movies"
        tools:layout="@layout/fragment_movies">
        <action app:destination="@id/movieDetailActivity" />
    </fragment>

    <fragment
        android:id="@+id/navigation_tv_shows"
        android:name="com.ardafirdausr.movie_catalogue.view.fragment.TvShowsFragment"
        android:label="@string/title_tv_shows"
        tools:layout="@layout/fragment_tv_shows" />

    <activity
        android:id="@+id/movieDetailActivity"
        android:name="com.ardafirdausr.movie_catalogue.view.activity.MovieDetailActivity"
        android:label="activity_movie_detail"
        tools:layout="@layout/activity_movie_detail" >
        <argument
            android:name="movie"
            app:argType="com.ardafirdausr.movie_catalogue.api.movie.response.Movie" />
    </activity>

</navigation>